---
import UserIcon from '@/components/icons/User.astro';
const { t } = Astro.props;
---

<section id="about" class="mx-auto max-w-5xl scroll-m-20 py-16 sm:px-4">
  <h2
    class="mb-6 flex items-center text-3xl font-bold text-gray-900 dark:text-white"
  >
    <span class="mr-5">
      <UserIcon />
    </span>
    {t.about.title}
  </h2>
  <div class="mt-2 flex flex-col items-center gap-5 md:flex-row">
    <div>
      <p class="font-medium text-gray-800 dark:text-gray-300">
        {t.about.introduction.part1}
        <span class="text-yellow-500">{t.about.introduction.highlight}</span>
        {t.about.introduction.part2}
      </p>
      <p class="mt-5 font-medium text-gray-800 dark:text-gray-300">
        {t.about.skills.part1}
        <span class="text-yellow-500">{t.about.skills.highlight1}</span>
        {t.about.skills.part2}
        <span class="text-yellow-500">{t.about.skills.highlight2}</span>
        {t.about.skills.part3}
      </p>
      <p class="mt-5 font-medium text-gray-800 dark:text-gray-300">
        {t.about.goal}
      </p>
    </div>
  </div>
</section>
