---
import UserIcon from "@/components/icons/User.astro";
const { t } = Astro.props;
---

<section id='about' class="scroll-m-20 pb-36 w-full lg:mx-auto container lg:max-w-4xl">
    <h2 class='text-gray-900 dark:text-white text-3xl font-bold mb-6 flex items-center'>
        <span class="mr-5">
            <UserIcon />
        </span>
        {t.about.title}
    </h2>
    <div class='mt-2 gap-5 flex flex-col md:flex-row items-center'>
        <div>
            <p class='font-medium text-gray-800 dark:text-gray-300'>
                {t.about.introduction.part1}
                <span class='text-yellow-500'>{t.about.introduction.highlight}</span>
                {t.about.introduction.part2}
            </p>
            <p class='mt-5 font-medium text-gray-800 dark:text-gray-300'>{t.about.skills}</p>
            <p class='mt-5 font-medium text-gray-800 dark:text-gray-300'>{t.about.goal}</p>
        </div>
    </div>
</section>
