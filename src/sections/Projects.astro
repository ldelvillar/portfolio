---
import Code from "@/components/icons/Code.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import { t } from 'i18next';

const projectCards = [
    {
        image: "/images/snap-notes.webp",
        title: "SnapNotes",
        description: t("projects.notes_app.description"),
        github: 'https://github.com/ldelvillar/snap-notes',
        preview: 'https://snap-notes.vercel.app/',
        orientation: 'col',
    },
    {
        image: "/images/neoposters.webp",
        title: "Neoposters",
        description: t("projects.neoposters.description"),
        github: 'https://github.com/ldelvillar/neoposters',
        preview: 'https://neoposters.vercel.app/',
        orientation: 'col',
    },
    {
        image: "/images/pyxel.webp",
        title: t("projects.1942_game.title"),
        description: t("projects.1942_game.description"),
        github: 'https://github.com/ldelvillar/1942',
        orientation: 'row',
    }
];
---

<section id='projects' class="scroll-m-20 pb-10 w-full lg:mx-auto container lg:max-w-4xl">
    <h2 class='text-gray-900 dark:text-white text-3xl font-bold mb-6 flex items-center'>
        <span class="mr-5">
            <Code />
        </span>
        {t("projects.title")}
    </h2>
    <div class="mt-5 grid grid-cols-1 sm:grid-cols-2 gap-8 group">
        {
            projectCards.map(project => (
                <div class={`
                    transition-all
                    duration-400
                    group-hover:blur-[10px]
                    group-hover:scale-90
                    hover:!scale-110
                    hover:!blur-none
                    ${project.orientation === 'row' ? 'col-span-2' : ''}
                `}>
                    <ProjectCard {...project} />
                </div>
            ))
        }
    </div>
</section>
