---
import Code from "@/components/icons/Code.astro";
import ProjectCard from "@/components/ProjectCard.astro";

const projectCards = [
        {
            image: "/images/notesapp.webp",
            title: "Notes App",
            description: "Simplified version of the Linux shell, with functionalities like command sequences, commands in background and recovery of previous commands.",
            github: 'https://github.com/ldelvillar/Notes-App',
            preview: 'https://notesapp-ldelvillar.netlify.app/',
            orientation: 'col',
            class: ""
        },
        {
            image: "/images/shell.webp",
            title: "Linux shell",
            description: "Simplified version of the Linux shell, with functionalities like command sequences, commands in background and recovery of previous commands.",
            github: 'https://github.com/ldelvillar/vanlife',
            orientation: 'col',
            class: ""
        },
        {
            image: "/images/pyxel.webp",
            title: "1942 Game",
            description: "Simplified version of the Linux shell, with functionalities like command sequences, commands in background and recovery of previous commands.",
            github: 'https://github.com/ldelvillar/1942',
            orientation: 'row',
            class: "col-span-2"
        }
]
---

<section id='projects' class="scroll-m-20 pb-10 w-full lg:mx-auto container lg:max-w-4xl">
    <h2 class='text-gray-900 dark:text-white text-3xl font-bold mb-6 flex items-center'>
        <span class="mr-5">
            <Code />
        </span>
        Projects
    </h2>
    <div class="cards mt-5 flex flex-col sm:grid sm:grid-cols-2 gap-8">
        {
            projectCards.map(project => (
                <div class={`card ${project.class}`}>
                    <ProjectCard
                        image={project.image}
                        title={project.title}
                        description={project.description}
                        github={project.github}
                        preview={project.preview}
                        orientation={project.orientation}
                    />
                </div>
            ))
        }
    </div>
</section>

<style>
    .cards .card {
        transition: 400ms;
    }
    .cards .card:hover {
        transform: scale(1.1, 1.1);
    }
    .cards:hover > .card:not(:hover) {
        filter: blur(10px);
        transform: scale(0.9, 0.9);
    }
</style>