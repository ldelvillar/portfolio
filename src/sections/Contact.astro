---
import { Image } from 'astro:assets';

import ContactForm from '@/components/ContactForm.astro';
import Envelope from '@/components/icons/Envelope.astro';
import Phone from '@/components/icons/Phone.astro';
import Location from '@/components/icons/Location.astro';
import Linkedin from '@/components/logos/Linkedin.astro';

const { t } = Astro.props;
---

<section id="contact" class="mx-auto max-w-5xl scroll-m-20 py-16 sm:px-4">
  <h2
    class="mb-6 flex items-center text-3xl font-bold text-gray-900 dark:text-white"
  >
    <span class="mr-5">
      <Envelope class="size-7" />
    </span>
    {t.contact.title}
  </h2>

  <div class="flex flex-col-reverse gap-14 md:flex-row">
    <div class="w-full md:w-2/3">
      <ContactForm t={t} />
    </div>

    <div
      class="mt-6 flex flex-row gap-16 md:mt-0 md:w-1/3 md:flex-col md:gap-0"
    >
      <div class="mb-4">
        <Image
          src="/images/profile.webp"
          alt="Profile"
          width={96}
          height={96}
          class="rounded-full object-cover"
        />
      </div>
      <div class="flex flex-col sm:flex-row sm:gap-16 md:flex-col md:gap-0">
        <h5 class="text-lg font-semibold text-gray-700 dark:text-gray-100">
          {t.contact.details.title}
        </h5>
        <a
          href="mailto:ldelvillarvazquez@gmail.com"
          target="_blank"
          class="mb-1 flex items-center text-gray-900 hover:underline dark:text-white"
        >
          <span class="mr-2">
            <Envelope class="size-5" />
          </span>
          {t.contact.details.email}
        </a>
        <p class="mb-1 flex items-center text-gray-900 dark:text-white">
          <span class="mr-2">
            <Phone class="size-5" />
          </span>
          {t.contact.details.phone}
        </p>
        <p class="mb-1 flex items-center text-gray-900 dark:text-white">
          <span class="mr-2">
            <Location class="size-5" />
          </span>
          {t.contact.details.location}
        </p>
        <a
          href="https://www.linkedin.com/in/ldelvillar/"
          target="_blank"
          class="mb-1 flex items-center text-gray-900 hover:underline dark:text-white"
        >
          <span class="mr-2">
            <Linkedin class="size-5" />
          </span>
          Lucas del Villar
        </a>
      </div>
    </div>
  </div>
</section>
