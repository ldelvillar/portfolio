---
import Github from "../components/logos/Github.astro";
import Linkedin from "../components/logos/Linkedin.astro";
import Envelope from "@/components/icons/Envelope.astro";
import 'animate.css/animate.min.css';
import { t } from "i18next";
---

<section id='hero' class='pb-40 lg:py-24 w-full lg:mx-auto container lg:max-w-4xl'>
    <div class='flex flex-col-reverse md:flex-col items-center lg:flex-row'>
        <div class='max-w-xl'>
            <h1 class='text-5xl text-gray-800 dark:text-white font-bold animate__animated animate__bounceInDown animate__slow'>Hey, <span class='text-yellow-500 dark:text-yellow-400'>{t('hero.title')}</span></h1>
            <div class='animate__animated animate__backInLeft animate__slow'>
                <span class="mt-1 font-semibold inline-flex animate-background-shine bg-[linear-gradient(110deg,#8a8833,45%,#0f172a,55%,#8a8833)] dark:bg-[linear-gradient(110deg,#f4ffb6,45%,#607406,55%,#f4ffb6)] bg-[length:250%_100%] bg-clip-text text-xl text-transparent">
                    {t('hero.subtitle')}
                </span>
                <p class='text-gray-600 dark:text-gray-300 font-semibold text-xl mt-4'>{t('hero.description1')} <span class='text-yellow-500 dark:text-yellow-400'>{t('hero.description2')} </span>{t('hero.description3')}</p>
            </div>
            <nav class='grid grid-cols-2 md:flex flex-col md:flex-row md:items-center justify-center lg:justify-start gap-5 mt-8 text-lg animate__animated animate__backInUp animate__slow'>
                <a href="https://github.com/ldelvillar" target='_blank' class='text-white font-medium flex flex-row-reverse gap-2 items-center justify-center border border-gray-600 rounded-full px-3 py-1 bg-gradient-to-r from-gray-400 to-gray-600 dark:from-slate-800 dark:to-slate-950 hover:scale-105 transition-transform'>
                    GitHub
                    <Github size={20} />
                </a>
                <a href="https://www.linkedin.com/in/lucas-del-villar-v%C3%A1zquez-b7986a29a/" target='_blank' class='text-white font-medium flex flex-row-reverse gap-2 items-center justify-center border border-gray-600 rounded-full px-3 py-1 bg-gradient-to-r from-gray-400 to-gray-600 dark:from-slate-800 dark:to-slate-950 hover:scale-105 transition-transform'>
                    LinkedIn
                    <Linkedin />
                </a>
                <a href="mailto:ldelvillarvazquez@gmail.com" class='col-span-2 text-white font-medium flex flex-row-reverse gap-2 items-center justify-center border border-gray-600 rounded-full px-3 py-1 bg-gradient-to-r from-gray-400 to-gray-600 dark:from-slate-800 dark:to-slate-950 hover:scale-105 transition-transform'>
                    ldelvillarvazquez@gmail.com
                    <Envelope size={20} />
                </a>
            </nav>
        </div>
        <div class='flex items-center md:ml-12 mt-8 animate__animated animate__backInDown animate__slow'>
            <div class='md:mt-10'>    
                <img
                    src="/images/profile.webp"
                    alt="Lucas del Villar"
                    class='w-60 rounded-xl rotate-3 bg-black outline outline-1 outline-offset-2 outline-gray-500
                    mx-2 my-2'
                />
            </div>
        </div>
    </div>
</section>