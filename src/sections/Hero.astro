---
import { Image } from 'astro:assets';
import type { AstroComponentFactory } from 'astro/runtime/server/index.js';
import 'animate.css/animate.min.css';
import Github from '@/components/logos/Github.astro';
import Linkedin from '@/components/logos/Linkedin.astro';
import Envelope from '@/components/icons/Envelope.astro';

interface SocialData {
  name: string;
  url: string;
  icon: AstroComponentFactory;
}

const { t } = Astro.props;

const socials: SocialData[] = [
  {
    name: 'GitHub',
    url: 'https://github.com/ldelvillar',
    icon: Github,
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/ldelvillar',
    icon: Linkedin,
  },
  {
    name: 'ldelvillarvazquez@gmail.com',
    url: 'mailto:ldelvillarvazquez@gmail.com',
    icon: Envelope,
  },
];
---

<section id="hero" class="max-w-5xl mx-auto sm:px-4 py-16">
  <div class="flex flex-col-reverse md:flex-row gap-6 items-center">
    <div class="md:basis-2/3">
      <h1
        class="text-5xl text-gray-800 dark:text-white font-bold animate__animated animate__bounceInDown animate__slow"
      >
        Hey, <span class="text-yellow-500 dark:text-yellow-400"
          >{t.hero.title}</span
        >
      </h1>
      <div class="animate__animated animate__backInLeft animate__slow">
        <span
          class="inline-flex font-semibold text-xl animate-background-shine bg-[linear-gradient(110deg,#8a8833,45%,#0f172a,55%,#8a8833)] dark:bg-[linear-gradient(110deg,#f4ffb6,45%,#607406,55%,#f4ffb6)] bg-[length:250%_100%] bg-clip-text text-transparent mt-1"
        >
          {t.hero.subtitle}
        </span>
        <p class="font-semibold text-xl text-gray-600 dark:text-gray-300 mt-4">
          {t.hero.description1}
          <span class="text-yellow-500 dark:text-yellow-400"
            >{t.hero.description2}
          </span>{t.hero.description3}
        </p>
      </div>
      <nav
        class="flex flex-wrap gap-5 text-lg mt-8 animate__animated animate__backInUp animate__slow"
      >
        {
          socials.map(social => (
            <a
              href={social.url}
              target="_blank"
              class="flex flex-row gap-2 items-center justify-center font-medium text-white border border-gray-600 rounded-full px-3 py-1 bg-gradient-to-r from-gray-400 to-gray-600 dark:from-slate-800 dark:to-slate-950 hover:scale-105 transition-transform"
            >
              <social.icon class="size-6" />
              <span>{social.name}</span>
            </a>
          ))
        }
      </nav>
    </div>

    <div
      class="md:basis-1/3 flex items-center mt-8 animate__animated animate__backInDown animate__slow"
    >
      <Image
        src="/images/profile.webp"
        alt="Lucas del Villar"
        width={240}
        height={240}
        loading="eager"
        class=`w-60 rounded-full rotate-3 bg-black outline outline-1 outline-offset-2 outline-gray-500 m-2`
      />
    </div>
  </div>
</section>
