---
import { Image } from 'astro:assets';
import type { AstroComponentFactory } from 'astro/runtime/server/index.js';
import 'animate.css/animate.min.css';
import Github from '@/components/logos/Github.astro';
import Linkedin from '@/components/logos/Linkedin.astro';
import Envelope from '@/components/icons/Envelope.astro';

interface SocialData {
  name: string;
  url: string;
  icon: AstroComponentFactory;
}

const { t } = Astro.props;

const socials: SocialData[] = [
  {
    name: 'GitHub',
    url: 'https://github.com/ldelvillar',
    icon: Github,
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/ldelvillar',
    icon: Linkedin,
  },
  {
    name: 'ldelvillarvazquez@gmail.com',
    url: 'mailto:ldelvillarvazquez@gmail.com',
    icon: Envelope,
  },
];
---

<section id="hero" class="mx-auto max-w-5xl py-4 sm:px-4 md:py-16">
  <div class="flex flex-col-reverse items-center gap-6 md:flex-row">
    <div class="md:basis-2/3">
      <div
        class="animate__animated animate__bounceInDown animate__slow flex flex-row-reverse gap-6 md:flex-col"
      >
        <div>
          <h1
            class="text-4xl font-bold text-gray-800 md:text-5xl dark:text-white"
          >
            Hey, <span class="text-yellow-500 dark:text-yellow-400"
              >{t.hero.title}</span
            >
          </h1>
          <span
            class="animate-background-shine mt-1 inline-flex bg-[linear-gradient(110deg,#8a8833,45%,#0f172a,55%,#8a8833)] bg-[length:250%_100%] bg-clip-text text-xl font-semibold text-transparent dark:bg-[linear-gradient(110deg,#f4ffb6,45%,#607406,55%,#f4ffb6)]"
          >
            {t.hero.subtitle}
          </span>
        </div>
        <div
          class="animate__animated animate__backInDown animate__slow flex items-center md:mt-8 md:hidden md:basis-1/3"
        >
          <Image
            src="/images/profile.webp"
            alt="Lucas del Villar"
            width={240}
            height={240}
            loading="eager"
            class="w-40 rotate-3 rounded-full outline outline-offset-2 outline-gray-500"
          />
        </div>
      </div>
      <div class="animate__animated animate__backInLeft animate__slow">
        <p class="mt-4 text-xl font-semibold text-gray-600 dark:text-gray-300">
          {t.hero.description1}
          <span class="text-yellow-500 dark:text-yellow-400"
            >{t.hero.description2}
          </span>{t.hero.description3}
        </p>
      </div>
      <nav
        class="animate__animated animate__backInUp animate__slow mt-8 flex flex-wrap gap-5 text-lg"
      >
        {
          socials.map(social => (
            <a
              href={social.url}
              target="_blank"
              class="flex flex-row items-center justify-center gap-2 rounded-full border border-gray-600 bg-gradient-to-r from-gray-400 to-gray-600 px-3 py-1 font-medium text-white transition-transform hover:scale-105 dark:from-slate-800 dark:to-slate-950"
            >
              <social.icon class="size-6" />
              <span>{social.name}</span>
            </a>
          ))
        }
      </nav>
    </div>

    <div
      class="animate__animated animate__backInDown animate__slow hidden items-center md:mt-8 md:flex md:basis-1/3"
    >
      <Image
        src="/images/profile.webp"
        alt="Lucas del Villar"
        width={240}
        height={240}
        loading="eager"
        class="w-60 rotate-3 rounded-full outline outline-1 outline-offset-2 outline-gray-500"
      />
    </div>
  </div>
</section>
