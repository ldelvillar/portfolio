---
const { t } = Astro.props;

interface InputsData {
  number: string;
  question: string;
  type: 'text' | 'email' | 'textarea';
  id: string;
  placeholder: string;
  required: boolean;
}

const inputs: InputsData[] = [
  {
    number: '01',
    question: t.form.name.question,
    type: 'text',
    id: 'name',
    placeholder: t.form.name.placeholder,
    required: true,
  },
  {
    number: '02',
    question: t.form.email.question,
    type: 'email',
    id: 'email',
    placeholder: t.form.email.placeholder,
    required: true,
  },
  {
    number: '03',
    question: t.form.organization.question,
    type: 'text',
    id: 'organization',
    placeholder: t.form.organization.placeholder,
    required: false,
  },
  {
    number: '04',
    question: t.form.services.question,
    type: 'text',
    id: 'services',
    placeholder: t.form.services.placeholder,
    required: true,
  },
  {
    number: '05',
    question: t.form.message.question,
    type: 'textarea',
    id: 'message',
    placeholder: t.form.message.placeholder,
    required: true,
  },
];
---

<form class="space-y-6">
  {
    inputs.map(input => (
      <div class="text-gray-900 dark:text-gray-100">
        <label
          for={input.id}
          class="mb-2 block text-xl text-gray-800 dark:text-gray-200"
        >
          <span class="mr-6 text-xl text-gray-400">{input.number}</span>
          {input.question}
        </label>
        {input.type === 'textarea' ? (
          <textarea
            id={input.id}
            name={input.id}
            placeholder={input.placeholder}
            required={input.required}
            class="h-32 w-full rounded-md border-b border-gray-300 bg-transparent px-3 pt-4 pb-8 placeholder:font-bold focus:outline-none"
          />
        ) : (
          <input
            type={input.type}
            id={input.id}
            name={input.id}
            placeholder={input.placeholder}
            required={input.required}
            class="w-full rounded-md border-b border-gray-300 bg-transparent px-3 pt-4 pb-8 placeholder:font-bold focus:ring-blue-500 focus:outline-none"
          />
        )}
      </div>
    ))
  }
  <button
    type="submit"
    class="w-full rounded-md bg-black px-6 py-3 text-white transition duration-300 hover:bg-gray-800 dark:bg-white dark:text-black dark:hover:bg-gray-200"
  >
    {t.form.send}
  </button>
</form>
