---
import { t } from 'i18next';
import RightArrow from './icons/RightArrow.astro';

interface Props {
    date: string,
    title: string,
    description: string,
    link?: string | undefined,
}

const { date, title, description, link } = Astro.props;
---

<li class="mb-20 ms-4">
    <div class="absolute w-3 h-3 bg-yellow-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900"></div>
    <div class="flex flex-row">
        <div class="w-[40%]">
            <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
            <time class="mb-1 text-sm font-normal leading-none text-gray-700 dark:text-gray-300">{date}</time>
        </div>
        <div class="w-[60%] ml-8">
            <p class="mb-4 text-base text-gray-700 dark:text-gray-300">{description}</p>
            {link && 
            <a href={link} class="inline-flex items-center px-4 py-2 text-sm font-medium text-yellow-500 bg-white border border-gray-200 rounded-lg hover:ring-gray-100 hover:ring-4 hover:text-yellow-400 focus:z-10 hover:bg-slate-100 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-yellow-400 dark:bg-gray-800 dark:text-yellow-400 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-100">{t("timeline.learn_more")}
                <RightArrow/>
            </a>}
        </div>
    </div>
</li>
