---
interface Props {
    date: string,
    title: string,
    description: string,
    link: string,
}

const { date, title, description, link } = Astro.props
---

<li class="mb-20 ms-4">
    <div class="absolute w-3 h-3 bg-yellow-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900"></div>
    <div class="flex flex-row">
        <div class="w-[40%]">
            <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
            <time class="mb-1 text-sm font-normal leading-none text-gray-700 dark:text-gray-300">{date}</time>
        </div>
        <div class="w-[60%] ml-8">
            <p class="mb-4 text-base text-gray-700 dark:text-gray-300">{description}</p>
            {link && <a href={link} class="inline-flex items-center px-4 py-2 text-sm font-medium text-yellow-500 bg-white border border-gray-200 rounded-lg hover:ring-gray-100 hover:ring-4 hover:text-yellow-400 focus:z-10 hover:bg-slate-100 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-yellow-400 dark:bg-gray-800 dark:text-yellow-400 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-100">Learn more<svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg></a>}
        </div>
    </div>
</li>
