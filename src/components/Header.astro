---
import ThemeToggle from '@/components/ThemeToggle.astro';
import LanguageToggle from '@/components/LanguageToggle.astro';
import MenuIcon from '@/components/icons/Menu.astro';

interface Props {
  t: any;
  lang: string;
}

const { t, lang } = Astro.props;
---

<header
  class="sticky top-0 z-40 w-full text-gray-700 backdrop-blur-xl dark:text-white"
>
  <div
    class="container mx-auto flex items-center justify-between p-4 lg:justify-evenly"
  >
    <a
      href={lang === 'es' ? '/es' : '/en'}
      class="text-lg font-bold text-black dark:text-white"
    >
      {t.header.name}
    </a>

    <nav class="hidden space-x-8 lg:flex">
      <a
        href="#experience"
        class="hover:text-yellow-600 dark:hover:text-yellow-400"
        >{t.header.nav.experience}</a
      >
      <a
        href="#projects"
        class="hover:text-yellow-600 dark:hover:text-yellow-400"
        >{t.header.nav.projects}</a
      >
      <a href="#about" class="hover:text-yellow-600 dark:hover:text-yellow-400"
        >{t.header.nav.about}</a
      >
      <a
        href="mailto:ldelvillarvazquez@gmail.com"
        class="hover:text-yellow-600 dark:hover:text-yellow-400"
        >{t.header.nav.contact}</a
      >
    </nav>

    <div class="flex items-center gap-2">
      <button id="menu-toggle" class="focus:outline-none lg:hidden">
        <MenuIcon />
      </button>
      <ThemeToggle />
      <LanguageToggle currentLang={lang} />
    </div>
  </div>

  <!-- Mobile menu -->
  <nav id="mobile-menu" class="hidden h-screen backdrop-blur-lg lg:hidden">
    <ul class="space-y-4 p-4">
      <li>
        <a href="#about" class="block hover:text-gray-900"
          >{t.header.nav.about}</a
        >
      </li>
      <li>
        <a href="#projects" class="block hover:text-gray-900"
          >{t.header.nav.projects}</a
        >
      </li>
      <li>
        <a href="#skills" class="block hover:text-gray-900"
          >{t.header.nav.skills}</a
        >
      </li>
      <li>
        <a
          href="mailto:ldelvillarvazquez@gmail.com"
          class="block hover:text-gray-900">{t.header.nav.contact}</a
        >
      </li>
    </ul>
  </nav>
</header>

<script>
  // Toggle mobile menu
  document.getElementById('menu-toggle')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
    mobileMenu?.classList.toggle('block');
  });
</script>
