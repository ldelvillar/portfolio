---
import { getTranslations } from '@/utils/getTranslations';
import type { Lang } from '@/i18n/config';
import Layout from '@/layouts/Layout.astro';

const lang = (Astro.params?.lang ?? 'es') as Lang;
const t = await getTranslations(lang);
---

<Layout title="404">
  <section>
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center">
        <h1
          class="mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl text-yellow-500 dark:text-yellow-400"
        >
          404
        </h1>
        <p
          class="mb-4 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl dark:text-white"
        >
          {t.not_found.title}
        </p>
        <p class="mb-4 text-lg font-light text-gray-500 dark:text-gray-400">
          {t.not_found.description}
        </p>
        <a
          href="/"
          class="inline-flex text-white bg-yellow-600 hover:bg-yellow-800 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-yellow-900 my-4"
          >{t.not_found.back_to_home}</a
        >
      </div>
    </div>
  </section>
</Layout>
